@model ResearchIssueModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="IssueCode" />
                        </div>
                        <div class="col-sm-9">
                            <label>@Model.IssueCode</label>
                            <input asp-for="IssueCode" type="hidden" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="FiscalYear" />
                        </div>
                        <div class="col-sm-9">
                            <nop-select asp-for="FiscalYear" asp-items="Model.AvailableFiscalYears" />
                            <span asp-validation-for="FiscalYear"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="Name" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="Name" asp-required="true" />
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>