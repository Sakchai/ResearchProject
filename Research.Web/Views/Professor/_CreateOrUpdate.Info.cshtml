@model ProfessorModel

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="ProfessorCode" />
                </div>
                <div class="col-md-9">
                    <label>@Model.ProfessorCode</label>
                    <input asp-for="ProfessorCode" type="hidden" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="ProfessorType" />
                </div>

                <div class="col-md-9">
                    <div class="col-md-3">
                        <input type="radio" asp-for="ProfessorType" value="InternalExpert" checked="@(Model.ProfessorType == "InternalExpert")" id="gender-male" />
                        ผู้ทรงคุณวุฒิภายใน
                    </div>
                    <div class="col-md-3">
                        <input type="radio" asp-for="ProfessorType" value="ExternalExpert" checked="@(Model.ProfessorType == "ExternalExpert")" id="gender-female" />
                        ผู้ทรงคุณวุฒิภายนอก
                    </div>
                    <span asp-validation-for="ProfessorType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="TitleName" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="TitleName" asp-required="true" />
                    <span asp-validation-for="TitleName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="FirstName" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="FirstName" asp-required="true" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="LastName" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="LastName" asp-required="true" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Telephone" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Telephone" asp-required="true" />
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Email" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Email" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="IsActive" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="IsActive" type="checked" />
                    <span asp-validation-for="IsActive"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Comment" />
                </div>
                <div class="col-md-9">
                    <nop-textarea asp-for="Comment" />
                </div>
            </div>


        </div>
    </div>
</div>

