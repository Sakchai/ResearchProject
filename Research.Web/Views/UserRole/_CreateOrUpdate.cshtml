@model UserRoleModel

<div asp-validation-summary="ModelOnly"></div>
<input asp-for="Id" type="hidden" />



<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="Name"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Name" asp-required="true"/>
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="SystemName"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="SystemName"/>
                            <span asp-validation-for="SystemName"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="EnablePasswordLifetime"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="EnablePasswordLifetime"/>
                            <span asp-validation-for="EnablePasswordLifetime"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="IsActive"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="IsActive"/>
                            <span asp-validation-for="IsActive"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="IsSystemRole"/>
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@(Model.IsSystemRole ? "เป็น" : "ไม่เป็น")</div>
                            <input type="hidden" asp-for="IsSystemRole"/>
                            <span asp-validation-for="IsSystemRole"></span>
                        </div>
                    </div>
                </div>
            </div>
         </div>
    </div>
</div>