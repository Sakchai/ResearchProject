@model EmailAccountModel

@{
    //page title
    ViewBag.Title = "เพิ่มอีเมลส่งจดหมายอิเล็กทรอนิกส์";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Email accounts");
}

<form asp-controller="EmailAccount" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            เพิ่มอีเมลส่งจดหมายอิเล็กทรอนิกส์
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">กลับไปยังรายการอีเมลในการส่งจดหมายอีเล็กทรอนิกส์</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                บันทึก
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                บันทึกและดำเนินรายการต่อ
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>