@model MessageTemplateModel

@{
    //page title
    ViewBag.Title = "ตัวแบบเอกสาร";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Message templates");
}

<form asp-controller="MessageTemplate" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            ตัวแบบเอกสาร
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">กลับไปยังรายการตัวแบบเอกสาร</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                บันทึก
            </button>

            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                บันทึกและทำรายการต่อ
            </button>

            <button type="submit" id="message-template-copy" name="message-template-copy" class="btn bg-green">
                <i class="fa fa-clone"></i>
                สำเนา
            </button>
            <nop-action-confirmation asp-button-id="message-template-copy" />
            <span id="message-template-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                ลบรายการ
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="message-template-delete" />